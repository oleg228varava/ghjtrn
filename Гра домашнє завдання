import 'dart:io';

void main() {
  print("Вітаю у грі! Вам потрібно приймати рішення, щоб дійти до кінця. Готові? Почнімо!");

  // Крок 1
  print("Крок 1: Ви стоїте перед двома дверима. Виберіть одну з них.");
  print("1 - Ліва двері");
  print("2 - Права двері");

  stdout.write("Ваш вибір (1 або 2): ");
  String? choice1 = stdin.readLineSync();

  if (choice1 == "1") {
    print("Ви обрали ліву двері і зайшли в темну кімнату.");
  } else {
    print("Ви обрали праву двері і потрапили в освітлений коридор.");
  }

  // Крок 2
  print("Крок 2: Ви бачите сходи, що ведуть угору, і люк, який веде вниз.");
  print("1 - Піднятися вгору");
  print("2 - Спуститися вниз");

  stdout.write("Ваш вибір (1 або 2): ");
  String? choice2 = stdin.readLineSync();

  if (choice2 == "1") {
    print("Ви піднялися нагору і побачили таємничу кімнату.");
  } else {
    print("Ви спустилися вниз і опинилися в підземеллі.");
  }

  // Крок 3
  print("Крок 3: Перед вами два предмети - ключ і факел.");
  print("1 - Взяти ключ");
  print("2 - Взяти факел");

  stdout.write("Ваш вибір (1 або 2): ");
  String? choice3 = stdin.readLineSync();

  if (choice3 == "1") {
    print("Ви взяли ключ і знайшли вихід! Ви перемогли!");
  } else {
    print("Ви взяли факел і побачили ще глибше підземелля. Гра завершена, спробуйте ще раз!");
  }

  print("Дякуємо за гру!");
}
